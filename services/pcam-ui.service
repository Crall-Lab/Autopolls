[Unit]
Description=uWSGI instance to serve pcam ui
After=network.target nginx.service systemd-tmpfiles-setup.service

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/AP/pollinatorcam
ExecStart=/bin/bash -c "PATH=~.virtualenvs/autopolls/bin:$PATH exec ~.virtualenvs/autopolls/bin/uwsgi --ini pcam-ui.ini"

[Install]
WantedBy=multi-user.target

